<Window x:Class="chapter3lesson2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chapter3lesson2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="214*" />
            <RowDefinition Height="48*" />
        </Grid.RowDefinitions>
        <MediaElement MediaFailed="MediaElement1_MediaFailed" LoadedBehavior="Manual" Margin="0" Name="MediaElement1" />
        <ToolBar Grid.Row="1" Margin="0" Name="ToolBar1" >
            <Button Click="Button_Click">Open</Button>
            <Button Click="Button_Click_1">Play</Button>
            <Button Click="Button_Click_2">Pause</Button>
            <Button Click="Button_Click_3">Stop</Button>
        </ToolBar>
    </Grid>
</Window>
